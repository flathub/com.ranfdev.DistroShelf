{
    "id" : "com.ranfdev.DistroShelf",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm19"
    ],
    "command" : "distroshelf",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "build-options" : {
        "prepend-path": "/app/bin:/usr/bin",
        "append-path" : "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm19/bin",
        "config-opts": [
            "-Dbuildtype=release",
            "-Doffline=true"
        ],
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "distroshelf=debug",
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_LINKER" : "clang",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_LINKER" : "clang",
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_RUSTFLAGS" : "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_RUSTFLAGS" : "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "distroshelf",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url": "https://github.com/ranfdev/DistroShelf/releases/download/v0.1.0/distroshelf-0.1.0.tar.xz",
                    "sha256": "b41d18785014c32468900e9ee5dd266baa0f4705969bd2565de234412a53c6bc"

                }
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ]
}
