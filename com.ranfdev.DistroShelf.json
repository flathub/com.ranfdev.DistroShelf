{
    "id": "com.ranfdev.DistroShelf",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm19"
    ],
    "command": "distroshelf",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "build-options": {
        "prepend-path": "/app/bin:/usr/bin",
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm19/bin",
        "config-opts": [
            "-Dbuildtype=release",
            "-Doffline=true"
        ],
        "env": {
            "RUST_BACKTRACE": "1",
            "RUST_LOG": "distroshelf=debug",
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_LINKER": "clang",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_LINKER": "clang",
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_RUSTFLAGS": "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_RUSTFLAGS": "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "distroshelf",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/ranfdev/DistroShelf/releases/download/v1.0.6/distroshelf-1.0.6.tar.xz",
                    "sha256": "c7e979acff962f6edf09a65c09d994546d684b4f0e09886afce87d693d718a20",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/ranfdev/DistroShelf/releases/latest",
                        "version-query": ".tag_name | sub(\"^v\"; \"\")",
                        "url-query": ".assets[] | select(.name==\"distroshelf-\" + $version + \".tar.xz\") | .browser_download_url"
                    }
                }
            ]
        }
    ]
}
